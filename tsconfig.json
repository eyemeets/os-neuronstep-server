{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "outDir": "./dist",
    "isolatedModules": false,
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
